---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSheetData } from '../lib/getSheetData.js';
import LessonFilter from '../components/LessonFilter.jsx';

let lessons = [];
let error = null;

try {
  lessons = await getSheetData();
} catch (err) {
  error = err instanceof Error ? err.message : 'Unknown error occurred';
}

// Filter to only include lessons marked as "Keep candidate" or "Keep"
const activeLessons = lessons.filter(
  (lesson) => lesson['Keep?'] && lesson['Keep?'].includes('Keep')
);
---

<style>
  .page-header {
    background: linear-gradient(135deg, var(--uc-blue) 0%, var(--uc-light-blue) 100%);
    padding: 3rem 2rem;
    margin: -2rem -2rem 2rem -2rem;
    text-align: center;
    border-bottom: 4px solid var(--uc-gold);
  }

  .page-header h1 {
    margin: 0 0 0.5rem 0;
    font-size: 2.5rem;
    color: var(--uc-white);
  }

  .page-header p {
    margin: 0;
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
  }
  .error-state,
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
  }

  .error-state h2 {
    color: #b00020;
  }

  .error-state button {
    margin-top: 1rem;
    padding: 0.6rem 1.2rem;
    background: var(--uc-blue);
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .error-state button:hover {
    opacity: 0.9;
  }

</style>

<BaseLayout title="All Lessons">
  <div class="page-header">
    <h1>All Lessons</h1>
    <p>Browse and filter our complete collection of open source learning materials</p>
  </div>

{error ? (
  <div class="error-state">
    <h2>Unable to load lessons</h2>
    <p>Please try again.</p>
    <button onClick="window.location.reload()">Retry</button>
  </div>
) : activeLessons.length === 0 ? (
  <div class="empty-state">
    <h2>No lessons found</h2>
    <p>No lessons found matching your criteria.</p>
  </div>
) : (
  <LessonFilter lessons={activeLessons} client:load />
)}

</BaseLayout>